<h1><%= @neighborhood.name %></h1>
<h2>Listings</h2>

<% @neighborhood.listings.each do |listing| %>
    <h4><%= link_to listing.title, listing_path(listing) %></h4>
    <ul>
        <li><%= listing.listing_type %></li>
        <li><%= listing.address %></li>
        <li><%= link_to listing.neighborhood.name, neighborhood_path(listing.neighborhood) %></li>
        <li><%= listing.description %></li>
        <li>Average Rating: <%= listing.average_review_rating %></li>
        <li>$<%= listing.price %></li>
    </ul>
<% end %>